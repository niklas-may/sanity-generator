{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "noImplicitAny": false,

    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "sanity-generator/*": ["src/*"]
    }
  },
  "exclude": ["playground", "build", "src/static"],
  "include": ["src", "test/generator-output"]
}
