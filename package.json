{
  "name": "sanity-generator",
  "version": "0.0.2-8",
  "main": "./build/index.js",
  "typings": "./build/types/index.d.ts",
  "files": [
    "build"
  ],
  "bin": {
    "sanity-generator": "build/cli/main.js",
    "sg": "build/cli/main.js"
  },
  "scripts": {
    "dev": "npx nodemon --ignore playground/sanity-generator/ --exec ts-node -- src/cli/main generate --config ./playground/sanity-generator.config.ts",
    "dev:sanity": "cd ./playground/sanity && sanity dev",
    "build": "rimraf ./build && tsc && cp -r src/static build/static",
    "preview": "node build/cli/main.js generate --config ./playground/sanity-generator.config.ts"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "rimraf": "^5.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "consola": "^3.2.3",
    "defu": "^6.1.2",
    "groq-js": "^1.2.0",
    "groqfmt-nodejs": "^0.0.5",
    "prettier": "^3.0.3",
    "serialize-javascript": "^6.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "description": "Sanity Generator is a codegen tool for [Sanity](https://www.sanity.io) to automatically generate GROQ queries from a schema perspective.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niklas-may/sanity-generator.git"
  },
  "keywords": [
    "sanity",
    "cms",
    "groq",
    "codegen"
  ],
  "author": "Niklas May <post@niklas-may.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/niklas-may/sanity-generator/issues"
  },
  "homepage": "https://github.com/niklas-may/sanity-generator#readme"
}
